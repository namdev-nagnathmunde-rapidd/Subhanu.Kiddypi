<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kiddypi.View.LoginPage"
             BackgroundImage="login_page"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Padding="25, 50" HorizontalOptions="Center" VerticalOptions="EndAndExpand">
            <Button Clicked="Button_Clicked" HorizontalOptions="FillAndExpand" WidthRequest="300" VerticalOptions="FillAndExpand" Text="LogIn" BackgroundColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>