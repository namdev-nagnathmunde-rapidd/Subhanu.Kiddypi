<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kiddypi.View.ImageDetailPage"
             Title="ImageDetails"
             BackgroundImage="Student_Background">


    <ScrollView>
        <StackLayout VerticalOptions="FillAndExpand" Padding="10" >

            <Image Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            Source="{Binding ImageUrl}" HeightRequest="300" WidthRequest="500" />
           
            
            <Image Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            Source="{Binding ChildImage_1}"  HeightRequest="300" WidthRequest="500"/>

            <Image Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            Source="{Binding ChildImage_2}" HeightRequest="300" WidthRequest="500" />

            <Image Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            Source="{Binding ChildImage_3}" HeightRequest="300" WidthRequest="500"/>


            <Image Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            Source="{Binding ChildImage_4}" HeightRequest="300" WidthRequest="500"/>

        </StackLayout>
        
    </ScrollView>
</ContentPage>