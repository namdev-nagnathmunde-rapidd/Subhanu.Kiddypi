<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kiddypi.View.StudentViewPage"
             xmlns:local="clr-namespace:Kiddypi"
             xmlns:ViewModel="clr-namespace:Kiddypi.ViewModel;assembly=Kiddypi"
             x:Name="StudentViewPage"
            Title="Student Profile">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sync" Command="{Binding GetSpeakersCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.BindingContext>
        <ViewModel:StudentViewModel>

        </ViewModel:StudentViewModel>

    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid x:Name="outerGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Grid x:Name="innerGrid" Grid.Row="0"  Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>-->

                <ListView ItemsSource="{Binding Studentdetails}" HasUnevenRows="True" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Spacing="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
                                    <Image Source="{Binding ImageUrl}" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center" />
                                    <Entry Text=" Student Profile" TextColor="Purple" x:Name="EntryTitle"/>
                                    
                                    <Grid x:Name="controlsGrid" Grid.Row="0"  >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />

                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Label Text="Student Full Name : " FontAttributes="Bold" TextColor="Green" Grid.Row="0" Grid.Column="0" />
                                        <Label Text="{Binding StudentName}" TextColor="Yellow" Grid.Row="0" Grid.Column="1" HorizontalOptions="StartAndExpand" />


                                        <Label Text="Parent Name          : " FontAttributes="Bold" TextColor="Green" Grid.Row="1" Grid.Column="0"/>
                                        <Label FontSize="16" Text="{Binding ParentName}" TextColor="Yellow" Grid.Row="1" Grid.Column="1" HorizontalOptions="StartAndExpand"/>

                                        <Label Text="Email Address        :" FontAttributes="Bold" TextColor="Green" Grid.Row="2" Grid.Column="0"/>
                                        <Label FontSize="16" Text="{Binding EmailID}" TextColor="Yellow" Grid.Row="2" Grid.Column="1" HorizontalOptions="StartAndExpand"/>

                                        <Label Text="Area Of Interest      :" FontAttributes="Bold" TextColor="Green" Grid.Row="3" Grid.Column="0"/>
                                        <Label FontSize="16" Text="{Binding AreaOfInterest}" TextColor="Yellow" Grid.Row="3" Grid.Column="1" HorizontalOptions="StartAndExpand"/>

                                        <Label Text="Projects                   :" FontAttributes="Bold" TextColor="Green" Grid.Row="4" Grid.Column="0"/>
                                        <Label FontSize="16" Text="{Binding Project}" TextColor="Yellow" Grid.Row="4" Grid.Column="1" HorizontalOptions="StartAndExpand"/>


                                        <Label Text="Date Of Birth            :" FontAttributes="Bold" TextColor="Green" Grid.Row="5" Grid.Column="0"/>
                                        <Label FontSize="16" Text="{Binding DOB}" TextColor="Yellow" Grid.Row="5" Grid.Column="1" HorizontalOptions="StartAndExpand"/>

                                        <Label Text="Age                          :" FontAttributes="Bold" TextColor="Green" Grid.Row="6" Grid.Column="0"/>
                                        <Label FontSize="16" Text="{Binding Age}" TextColor="Yellow" Grid.Row="6" Grid.Column="1" HorizontalOptions="StartAndExpand"/>

                                        <Label Text="Hobbies                   :" FontAttributes="Bold" TextColor="Green" Grid.Row="7" Grid.Column="0"/>
                                        <Label FontSize="16" Text="{Binding Hobbies}" TextColor="Yellow" Grid.Row="7" Grid.Column="1" HorizontalOptions="StartAndExpand"/>

                                    </Grid>


                                </StackLayout>






